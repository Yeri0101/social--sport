<% if notice %>
  <div class="position-relative">
    <div class="alert alert-dismissible alert-success end-0 fade position-absolute shadow-sm show top-50 translate-middle-y" role="alert">
      <%= notice %>
      <button aria-label="Close" class="btn-close" data-bs-dismiss="alert" type="button"></button>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="position-relative">
    <div class="alert alert-dark alert-dismissible end-0 fade position-absolute shadow-sm show top-50 translate-middle-y" role="alert">
      <%= alert %>
      <button aria-label="Close" class="btn-close" data-bs-dismiss="alert" type="button"></button>
    </div>
  </div>
<% end %>
