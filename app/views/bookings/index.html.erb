<div class="container mt-5">
  <h1>My bookings</h1>

  <ul id="bookings">

    <% @bookings.each do |booking| %>
      <li>
        <%= link_to booking.activity.name, activity_path(booking.activity.id) %>
        <%= link_to booking_path(booking.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{booking.activity.name}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
