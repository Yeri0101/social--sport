<div class="col-md-7">
  <div class="mb-5">
    <h2 class="fs-2">My activities</h2>
  </div>
</div>

<div class="align-items-center d-flex justify-content-between mb-5">
  <%= search_form_for @q, url: me_activities_path,
                          html: { class: "d-flex", method: :get },
                          data: { turbo: false } do |f| %>

    <%= f.search_field :description_or_name_or_address_or_reviews_comment_i_cont_any,
                       class: "border-0 form-control me-3 shadow-sm",
                       placeholder: "Search for a keyword" %>

    <%= f.submit class: "btn btn-light px-4 py-2 shadow",
                 placeholder: "Search" %>
  <% end %>

  <div class="d-grid d-md-flex">
    <% if policy(Activity).create? %>
      <%= link_to new_activity_path, class: "btn btn-green px-4 py-2 shadow" do %>
        Create
      <% end %>
    <% end %>
  </div>
</div>

<% if @activities.blank? %>
  <div class="col-md-6">
    <div class="border-0 card mb-5 p-4 rounded-4 shadow-sm">
      <div class="card-body">
        <div class="align-items-center d-flex justify-content-between">
          <h6 class="card-subtitle text-secondary">No activity created for the moment</h6>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="g-5 row">
    <% @activities.each do |activity| %>
      <div class="col-md-6">
        <div class="border-0 card p-4 rounded-4 shadow-sm">
          <% if activity.image.attached? %>
            <%= cl_image_tag activity.image.key, class: "card-img-top img-fluid mb-4 rounded-4 shadow-sm" %>
          <% else %>
            <% false %>
          <% end %>

          <div class="card-body">
            <% if activity.user == current_user %>
              <div class="align-items-center d-flex justify-content-between">
                <h5 class="card-title"><%= activity.name %></h5>
                <h6 class="card-subtitle"><%= pluralize activity.reviews.size, "review" %></h6>
              </div>
              <h6 class="card-subtitle mb-4 text-secondary"><%= activity.address %></h6>
              <p class="card-text mb-5 text-secondary"><%= activity.description %></p>
              <div class="align-items-center d-flex justify-content-between">
                <%= link_to "View", activity_path(activity.id), class: "btn btn-green card-link px-4 py-2 shadow" %>
                <% if policy(activity).destroy? %>
                  <%= link_to "Delete", activity_path(activity.id), class: "btn btn-light card-link px-4 py-2 shadow-sm", data: {turbo_method: :delete, turbo_confirm: "Would you like to continue?"} %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="mb-5"></div>
