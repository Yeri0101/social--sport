<div class="container text-center">

    <div class="form-group">
      <p>Create a new activity</p><br>

        <%= simple_form_for @activity, wrapper: :horizontal_form do |f| %>
            <%= f.input :name%>
            <%= f.input :description%>
            <%= f.input :address%>
            <%= f.input :image%>
            <br>
            <%= f.input :start_date, as: :datetime, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :datetime, input_html: {class: "datepicker"} %>

           <div class="form-actions">
             <div class="container text-center">
               <%= f.button :submit, "New", class: "btn btn-dark" %>
            </div>
          <% end %>
      </div>
</div>
