<div class="my-5">
  <h1 class="text-white">Activities</h1>
</div>

<% @activities.each do |activity| %>
  <%= link_to activity.description, activity_path(activity.id) %>
  <%= link_to activity_path(activity.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{activity.name}?"} do %>
    Delete
  <% end %>
<% end %>

<%= link_to new_activity_path do %>
  Add a new activity
<% end %>
