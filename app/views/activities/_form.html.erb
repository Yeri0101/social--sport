  <%= simple_form_for @activity, wrapper: :horizontal_form do |f| %>
    <%= f.input :name%>
    <%= f.input :category, collection: ['Of winter', 'aquatic', 'air' 'With ball' 'combined' 'Gym' ] %>
    <%= f.input :description%>
    <%= f.input :address%>
    <%= f.input :image%>
    <br>
    <div class="row">
  <div class="col">
    <%= f.input :start_date, as: :string,
                wrapper_html: { class: "mb-4" },
                label_html: { class: "form-label text-secondary fw-bold" },
                input_html: { data: { controller: "flatpickr" } } %>
  </div>
  <div class="col">
    <%= f.input :end_date, as: :string,
                wrapper_html: { class: "mb-4" },
                label_html: { class: "form-label text-secondary fw-bold" },
                input_html: { data: { controller: "flatpickr" } } %>
  </div>
</div>
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", :back, class: "btn btn-danger" %>
  <% end %>
