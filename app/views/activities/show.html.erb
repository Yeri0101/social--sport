<div class="col-md-7">
  <div class="mb-5">
    <h2 class="fs-2"><%= @activity.name %> <span class="text-secondary">with <%= @activity.user.first_name %></span></h2>
  </div>
</div>

<div class="align-items-center d-flex justify-content-between mb-5">
  <div class="d-grid d-md-flex">
    <%= link_to "Back", activities_path, class: "btn btn-light px-4 py-2 shadow" %>
  </div>

  <div class="d-grid d-md-flex">
    <% if policy(@activity).edit? %>
      <%= link_to "Update", edit_activity_path(@activity.id), class: "btn btn-green px-4 py-2 shadow" %>
    <% else %>
      <% if policy(@booking).create? %>
        <%= simple_form_for [@activity, @booking] do |f| %>
          <%= f.button :submit, "Book now", class: "btn btn-green card-link px-4 py-2 shadow-sm" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="g-5 row">
  <div class="col-md-6">
    <div class="mb-5">
      <h5 class="fs-5">About this activity</h5>
    </div>

    <div class="border-0 card mb-5 p-4 rounded-4 shadow-sm">
      <% if @activity.image.attached? %>
        <%= cl_image_tag @activity.image.key, class: "card-img-top img-fluid mb-4 rounded-4 shadow-sm" %>
      <% else %>
        <% false %>
      <% end %>

      <div class="card-body">
        <div class="align-items-center d-flex justify-content-between mb-4">
          <h5 class="card-title"><%= @activity.name %></h5>
          <h6 class="card-subtitle text-secondary"><%= @activity.start_date %></h6>
        </div>

        <p class="card-text text-secondary"><%= @activity.description %></p>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="align-items-center d-flex justify-content-between mb-5">
      <h5 class="fs-5">Location</h5>
      <h6 class="card-subtitle text-secondary"><%= @activity.address %></h6>
    </div>

    <div class="border-0 card mb-5 p-4 rounded-4 shadow-sm">
      <div class="card-body">
        <% if @marker %>
          <div style="width: 100%; height: 515px;" data-controller="map"
                                                   data-map-marker-value="<%= @marker.to_json %>"
                                                   data-map-api-key-value="<%= ENV["MAPBOX_ACCESS_TOKEN"] %>">
          </div>
        <% else %>
          <h6 class="card-subtitle text-secondary">Unable to locate this activity</h6>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="g-5 row">
  <% if @activity.reviews.blank? %>
    <div class="col-12">
      <h5 class="fs-5 mb-5">Be the first user to leave a review</h5>

      <%= render "reviews/new", activity: @activity, review: @review %>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="mb-5">
        <h5 class="fs-5 mb-5">Leave a review</h5>

        <%= render "reviews/new", activity: @activity, review: @review %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-5">
        <div class="align-items-center d-flex justify-content-between mb-5">
          <h5 class="fs-5">All reviews</h5>
          <h6 class="card-subtitle text-secondary"><%= pluralize @activity.reviews.size, "review" %></h6>
        </div>

        <% @activity.reviews.each do |review| %>
          <%= render "activities/activity_reviews", review: review %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="mb-5">
  <h5 class="fs-5 mb-5">Chat with other participants</h5>

  <%= render "chatrooms/chatroom", activity: @activity, chatroom: @activity.chatroom, message: @message %>
</div>
