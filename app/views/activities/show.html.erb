<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @activity.description %></h1>
    <%= link_to edit_activity_path(@activity.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this activity
    <% end %>
  </div>

  <%= link_to activities_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>

  <h2><%= pluralize @activity.reviews.size, "review" %></h2>

  <div>
    <% if @activity.reviews.blank? %>
      Be the first to leave a review for <%= @activity.name %>
    <% else %>
      <% @activity.reviews.each do |review| %>
        <%= render 'activities/activity_reviews', review: review %>
      <% end %>
    <% end %>
  </div>

  <%= render 'reviews/form', activity: @activity, review: @review %>
</div>

  <% if policy(@activity).edit? %>
    <% end %>
