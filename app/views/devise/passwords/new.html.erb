<div class="col-md-8 mb-5">
  <h2 class="fs-2">
    Reset your password
  </h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "g-4 row" }) do |f| %>
  <%= f.error_notification %>
  <div class="col-12">
    <%= f.input :email,
                autofocus: true,
                hint: "We will send you an e-mail with instructions to reset your password",
                input_html: { autocomplete: "email", class: "border-0 mb-3 px-4 py-3 shadow-sm" },
                label: "E-mail address",
                placeholder: "yerinto.martinez@lewagon.com",
                required: true %>
  </div>

  <div class="col-md-6 d-flex d-md-flex gap-4">
    <%= f.button :submit, "Send", class: "btn btn-bd-green px-5 py-3 shadow" %>
    <%= link_to "Cancel", user_session_path, class: "btn btn-light px-5 py-3 shadow-sm" %>
  </div>
<% end %>
