<div class="col-7">
  <div class="mb-5">
    <h2 class="fs-2">We invite you to come and discover with us a whole new way of sharing your sports sessions</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "g-3 row" }) do |f| %>
  <%= f.error_notification %>

  <div class="col-12">
    <%= f.input :email,
                autofocus: true,
                input_html: { autocomplete: "email", class: "border-0 mb-2 shadow-sm" },
                label: "E-mail address",
                placeholder: "yerinto.martinez@lewagon.com",
                required: true %>
  </div>

  <div class="col-md-6 d-flex d-md-flex gap-4">
    <%= f.button :submit, "Send", class: "btn btn-green px-4 py-2 shadow" %>

    <%= link_to "Cancel", user_session_path, class: "btn btn-light px-4 py-2 shadow" %>
  </div>
<% end %>
