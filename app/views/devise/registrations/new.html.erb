<div class="col-md-7">
  <div class="mb-5">
    <h2 class="fs-2">We invite you to come and discover with us a whole new way of sharing your sports sessions</h2>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: { class: "g-3 row"}) do |f| %>
  <div class="col-md-4">
    <%= f.input :first_name,
                as: :string,
                input_html: { autocomplete: "string", class: "border-0 mb-2 shadow-sm" },
                placeholder: "Maximilien",
                required: true %>
  </div>
  <div class="col-md-4">
    <%= f.input :last_name,
                as: :string,
                input_html: { autocomplete: "string", class: "border-0 mb-2 shadow-sm" },
                placeholder: "LANZ",
                required: true %>
  </div>
  <div class="col-md-2">
    <%= f.input :country_code,
                as: :string,
                autofocus: true,
                input_html: { autocomplete: "tel", class: "border-0 mb-2 shadow-sm" },
                placeholder: "+41",
                required: false %>
  </div>
  <div class="col-md-2">
    <%= f.input :phone_number,
                as: :string,
                autofocus: true,
                input_html: { autocomplete: "tel", class: "border-0 mb-2 shadow-sm" },
                placeholder: "76 000 00 00",
                required: false %>
  </div>
  <div class="col-12">
    <%= f.input :email,
                autofocus: true,
                input_html: { autocomplete: "email", class: "border-0 mb-2 shadow-sm" },
                label: "E-mail address",
                placeholder: "maximilien.lanz@lewagon.com",
                required: true %>
  </div>
  <div class="col-md-6">
    <%= f.input :password,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "border-0 mb-2 shadow-sm" },
                required: true %>
  </div>
  <div class="col-md-6">
    <%= f.input :password_confirmation,
                input_html: { autocomplete: "new-password", class: "border-0 mb-2 shadow-sm" },
                label: "Confirm password",
                required: true %>
  </div>
  <div class="col-12">
    <%= f.input :address,
                as: :string,
                hint: "Automatically completed",
                input_html: { autocomplete: "address-line1", class: "border-0 mb-2 shadow-sm" },
                placeholder: "Rue de Lausanne 64",
                required: true %>
  </div>
  <div class="col-md-4">
    <%= f.input :country,
                as: :string,
                input_html: { autocomplete: "country", class: "border-0 mb-2 shadow-sm" },
                placeholder: "Switzerland",
                required: true %>
  </div>
  <div class="col-md-4">
    <%= f.input :city,
                as: :string,
                input_html: { autocomplete: "address-level2", class: "border-0 mb-2 shadow-sm" },
                placeholder: "Renens",
                required: true %>
  </div>
  <div class="col-md-2">
    <%= f.input :state,
                as: :string,
                input_html: { autocomplete: "address-level1", class: "border-0 mb-2 shadow-sm" },
                label: "State / Province / Region",
                placeholder: "Canton de Vaud",
                required: true %>
  </div>
  <div class="col-md-2">
    <%= f.input :postcode,
                as: :string,
                input_html: { autocomplete: "postal-code", class: "border-0 mb-2 shadow-sm" },
                label: "Postal code",
                placeholder: "1020",
                required: true %>
  </div>

  <div class="col-md-6 d-flex d-md-flex gap-4 mb-5">
    <%= f.button :submit, "Create an account", class: "btn btn-green px-4 py-2 shadow" %>

    <%= link_to "Cancel", root_path, class: "btn btn-light px-4 py-2 shadow" %>
  </div>
<% end %>
