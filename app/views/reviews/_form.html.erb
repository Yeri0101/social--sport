<%= simple_form_for([ activity, review ], html: { class: "g-3"}) do |f| %>
  <div data-controller="character-counter">
    <div class="col-12">
      <%= f.input :comment,
                  as: :string,
                  autofocus: true,
                  input_html: { class: "border-0 mb-4 shadow-sm", data: { character_counter_target: "input" } },
                  label: "Review",
                  required: false %>

      <%= f.button :submit, "Comment", class: "btn btn-light card-link px-4 py-2 shadow" %>
    </div>
  </div>
<% end %>
